<header>
        <div class="logo-container">
            <img ui-sref="dashboard" class="logo-img" src="~/Assets/images/logos/logo6262.png" alt="logo" />
            <label class="app-title"><span class="uppercase-title-letter">W</span>are<span class="uppercase-title-letter">M</span>aster</label>
        </div>

        <div class="user-info" ng-controller="HeaderController">
            <article>
                <label>Korisnik:<span class="header-name">{{userName}}</span>     Tvrtka:<span class="header-company">{{companyName}}</span></label>
            </article>
        </div>

        <ul>
            <li class="dropdown">
                <div class="icon-button">
                    <span class="notification-icon" aria-hidden="true">
                        <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="button-content notification-content">
                    <div class="button-content-item"><p>Ovo je 1. obavijest</p></div>
                    <div class="button-content-item"><p>Ovo je 2. obavijest</p></div>
                    <div class="button-content-item"><p>Ovo je 3. obavijest</p></div>
                </div>
            </li>
            <li class="dropdown">
                <div class="icon-button">
                    <span class="help-icon" aria-hidden="true">
                        <i class="fa fa-question-circle" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="button-content">
                    <div class="button-content-item">Pomoć</div>
                    <div class="button-content-item">O WareMasteru</div>
                </div>
            </li>
            <li class="dropdown">
                <div class="icon-button">
                    <div class="menu-icon">
                        <div class="menu-bar bar1"></div>
                        <div class="menu-bar bar2"></div>
                        <div class="menu-bar bar3"></div>
                    </div>
                </div>
                <div class="button-content" ng-controller="MainMenuController">
                    <div class="button-content-item" ng-click="wantsToChangePassword = true">Promijeni lozinku</div>
                    <div ng-show="wantsToChangePassword">
                        Stara lozinka: <input type="password" ng-model="oldPassword"/>
                        Nova lozinka: <input type="password" ng-model="newPassword"/>
                        <button ng-click="changePassword()">Promijeni</button>
                        <button ng-click="wantsToChangePassword = false">Odustani</button>
                    </div>
                    <div class="button-content-item" ng-click="loadManagers()">Upravljaj s menadžerima</div>
                    <div ng-show="wantsToManipulateManagers">
                        <div ng-repeat="manager in allManagers">
                            {{manager.FirstName}} {{manager.LastName}}
                            <button ng-click="deleteManager(manager.Id, manager.FirstName, manager.LastName)">Izbriši</button>
                        </div>
                        <button ng-click="wantsToManipulateManagers = false">Odustani</button>
                        <button ng-click="wantsToChangePassword = false" ui-sref="registerexisting({companyid: companyId})">Dodaj novoga</button>
                    </div>
                    <div class="button-content-item">Promijeni temu</div>
                    <div class="button-content-item" ng-click="logout()">Odjava</div>
                </div>
            </li>
        </ul>
    </header>
@RenderBody()