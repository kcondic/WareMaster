<header ng-model="headerdisplayed" ng-init="false" ng-if="headerdisplayed">
        <div class="logo-container">
            <img ui-sref="dashboard" class="logo-img" src="~/Assets/images/logos/logo6262.png" alt="logo" />
            <label class="app-title"><span class="uppercase-title-letter">W</span>are<span class="uppercase-title-letter">M</span>aster</label>
        </div>

        <div class="user-info">
            <article>
                <label>Korisnik:<span class="user-name">{Ime Prezime}</span>     ID:<span class="user-id">{ID korisnika}</span></label>
            </article>
        </div>

        <ul>
            <li class="dropdown">
                <div class="icon-button">
                    <span class="notification-icon" aria-hidden="true">
                        <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="button-content notification-content">
                    <div class="button-content-item"><p>Ovo je 1. obavijest</p></div>
                    <div class="button-content-item"><p>Ovo je 2. obavijest</p></div>
                    <div class="button-content-item"><p>Ovo je 3. obavijest</p></div>
                </div>
            </li>
            <li class="dropdown">
                <div class="icon-button">
                    <span class="help-icon" aria-hidden="true">
                        <i class="fa fa-question-circle" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="button-content">
                    <div class="button-content-item">Pomoć</div>
                    <div class="button-content-item">O WareMasteru</div>
                </div>
            </li>
            <li class="dropdown">
                <div class="icon-button">
                    <div class="menu-icon">
                        <div class="menu-bar bar1"></div>
                        <div class="menu-bar bar2"></div>
                        <div class="menu-bar bar3"></div>
                    </div>
                </div>
                <div class="button-content">
                    <div class="button-content-item">Promijeni lozinku</div>
                    <div class="button-content-item">Promijeni temu</div>
                    <div class="button-content-item" ui-sref="logout">Odjava</div>
                </div>
            </li>
        </ul>
    </header>
<div ng-controller="displayLayoutController" ng-model="displaysubheader" ng-init="false" ng-if="displaysubheader">
  <div id="subheader">
    <!-- ARROW BUTTON WITH A LINK TO DASHBOARD -->
    <div class="link-to-dashboard-box">
        <button ui-sref="dashboard">
            <span class="arrow-to-left" aria-hidden="true">
                <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
            </span>
        </button>
    </div>
    <!-- BREADCRUMBS BOX -->
    <div class="breadcrumbs-box">
        <label ui-sref="dashboard">Dashboard</label>
        <span class="breadcrumb-sign" aria-hidden="true">
            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
        </span>
        <label>{{ templates[currentTemplateIndex].breadcrumbText }}</label>
    </div>
    <!-- NAVBAR BUTTON ELEMENTS -->
    <div class="template-navbar">
        <div class="add-button-box">
            <button ui-sref="addproduct" ng-if="getTemplateStatus(currentTemplate, 0)">Dodaj proizvod</button>
            <button ui-sref="addemployee" ng-if="getTemplateStatus(currentTemplate, 1)">Dodaj zaposlenika</button>
            <button ui-sref="addsupplier" ng-if="getTemplateStatus(currentTemplate, 2)">Dodaj dobavljača</button>
        </div>
    </div>
    <div class="sort-by-box">
        <div class="dropdown">
            <div class="sort-button icon-button">
                <p>Sortiraj po:<span class="sort-type">Vremenu dodavanja</span></p>
                <span class="sort-chevron-down" aria-hidden="true">
                    <i class="fa fa-chevron-down" aria-hidden="true"></i>
                </span>
            </div>
            <div class="button-content">
                <div class="button-content-item selected-sort-choice">Vremenu dodavanja</div>
                <div class="button-content-item">
                    {{templates[currentTemplateIndex].buttonContentItems.first}}
                </div>
                <div class="button-content-item" ng-if="isNotSuppliers(currentTemplate)">
                    {{templates[currentTemplateIndex].buttonContentItems.second}}
                </div>
                <div class="button-content-item" ng-if="getTemplateStatus(currentTemplate, 0)">
                    {{templates[0].buttonContentItems.third}}
                </div>
            </div>
        </div>
    </div>
    <div class="search-content-box">
        <input ng-model="global.search" placeholder="Pretraži..." size="15" />
        <span class="search-icon" aria-hidden="true">
            <i class="fa fa-search" aria-hidden="true"></i>
        </span>
    </div>
  </div>
</div>
@RenderBody()